# 10-basebuild.txt

FROM centos:7

# Need to use rackspace mirror to work on Jenkins
RUN sed -i 's|#baseurl=http://mirror.centos.org/centos|baseurl=http://mirror.rackspace.com/CentOS|' /etc/yum.repos.d/*.repo
RUN sed -i 's|mirrorlist.*||' /etc/yum.repos.d/*.repo
RUN sed -i 's|plugins=1|plugins=0|' /etc/yum.conf

RUN yum clean all
RUN yum update -y
RUN yum install -y wget unzip java-1.8.0-openjdk-headless
ENV JAVA_HOME /usr/lib/jvm/jre

WORKDIR /service

# 20-mysq.txt

# Set up mysql
RUN yum install -y mariadb-server
RUN chsh -s /bin/bash mysql
RUN mysql_install_db --user=mysql --datadir=/var/lib/mysql
COPY init-mysql.sh .

# 50-microservice.txt - AUTOGENERATED, DO NOT MODIFY MANUALLY

# Set up microservice
RUN wget -O common-tosca-inventory-1.0.0-RC0-linux64.tar.gz https://nexus.open-o.org/content/repositories/autorelease-1048/org/openo/common-tosca/inventory/standalone/1.0.0-RC0/standalone-1.0.0-RC0-linux64.tar.gz
RUN tar -xf common-tosca-inventory-1.0.0-RC0-linux64.tar.gz
RUN rm -f common-tosca-inventory-1.0.0-RC0-linux64.tar.gz
EXPOSE 8203
RUN echo Open-O 1.0.0-RC0 autorelease-1048 > VERSION


# 90-entrypoint.txt

COPY instance-config.sh .
COPY instance-init.sh .
COPY instance-run.sh .
COPY instance-workaround.sh .
COPY docker-entrypoint.sh .
ENTRYPOINT /service/docker-entrypoint.sh
