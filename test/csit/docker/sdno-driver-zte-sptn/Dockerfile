# Set up microservice
RUN wget -O sdno-driver-zte-sptn-1.0.0-RC0-linux64.tar.gz https://nexus.open-o.org/content/repositories/autorelease-1052/org/openo/sdno/driver-zte-sptn/standalone/1.0.0-RC0/standalone-1.0.0-RC0-linux64.tar.gz
RUN tar -xf sdno-driver-zte-sptn-1.0.0-RC0-linux64.tar.gz
RUN rm -f sdno-driver-zte-sptn-1.0.0-RC0-linux64.tar.gz
EXPOSE 8640
RUN echo Open-O 1.0.0-RC0 autorelease-1052 > VERSION


