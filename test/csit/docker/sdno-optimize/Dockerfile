EXPOSE 8620
RUN echo Open-O sdno-optimize 1.1.0-SNAPSHOT "https://nexus.open-o.org/service/local/repositories/snapshots/content/org/openo/sdno/optimize/ct_optimizer/1.1.0-SNAPSHOT/ct_optimizer-1.1.0-20170120.080907-3.zip" > OPENO_VERSION


