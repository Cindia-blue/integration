# 10-basebuild.txt

FROM centos:7

# Need to use rackspace mirror to work on Jenkins
# RUN sed -i 's|#baseurl=http://mirror.centos.org/centos|baseurl=http://mirror.rackspace.com/CentOS|' /etc/yum.repos.d/*.repo
RUN sed -i 's|#baseurl=http://mirror.centos.org/centos|baseurl=http://mirrors.ocf.berkeley.edu/centos|' /etc/yum.repos.d/*.repo
# RUN sed -i 's|mirrorlist.*||' /etc/yum.repos.d/*.repo
# RUN sed -i 's|plugins=1|plugins=0|' /etc/yum.conf
RUN yum update -y

# Temporarily enable sshd
RUN yum -y install openssh-server
RUN echo 'root:root' | chpasswd
RUN sed -i 's/PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config
# SSH login fix. Otherwise user is kicked off after login
RUN sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

RUN yum install -y wget unzip socat java-1.8.0-openjdk-headless
RUN sed -i 's|#networkaddress.cache.ttl=-1|networkaddress.cache.ttl=10|' /usr/lib/jvm/jre/lib/security/java.security
ENV JAVA_HOME /usr/lib/jvm/jre

WORKDIR /service

# 15-python.txt
RUN yum -y install epel-release && yum -y install python-{devel,virtualenv,setuptools,pip} openssl-devel mysql-devel gcc libffi-devel redis
# 20-mysq.txt

# Set up mysql
RUN wget -q http://repo.mysql.com/mysql-community-release-el7-5.noarch.rpm && rpm -ivh mysql-community-release-el7-5.noarch.rpm && rm -f mysql-community-release-el7-5.noarch.rpm
RUN yum -y update
RUN yum -y install -y mysql-server
RUN mysql_install_db --user=mysql --datadir=/var/lib/mysql
COPY init-mysql.sh .

# 50-microservice.txt - AUTOGENERATED, DO NOT MODIFY MANUALLY

# Set up microservice
RUN wget -q -O nfvo-lcm-1.0.0.zip https://nexus.open-o.org/content/repositories/autorelease-1084/org/openo/nfvo/nfvo-lcm/1.0.0/nfvo-lcm-1.0.0.zip && unzip -q -o -B nfvo-lcm-1.0.0.zip && rm -f nfvo-lcm-1.0.0.zip
EXPOSE 8403
RUN echo Open-O 1.0.0 autorelease-1084 > OPENO_VERSION


# 51-permissions.txt
RUN find -type d -exec chmod o-w {} \;
RUN chmod +x nfvo/lcm/*.sh
# need MySQL initDB script
RUN wget -q -O common-tosca-inventory-1.0.0-linux64.tar.gz https://nexus.open-o.org/content/repositories/autorelease-1084/org/openo/common-tosca/inventory/standalone/1.0.0/standalone-1.0.0-linux64.tar.gz && tar -xf common-tosca-inventory-1.0.0-linux64.tar.gz initDB.sh dbscripts && rm -f common-tosca-inventory-1.0.0-linux64.tar.gz
# 90-entrypoint.txt

RUN yum clean all

COPY instance-config.sh .
COPY instance-init.sh .
COPY instance-run.sh .
COPY instance-workaround.sh .
COPY docker-entrypoint.sh .
ENTRYPOINT /service/docker-entrypoint.sh

