# 10-basebuild.txt

FROM centos:7

# Need to use rackspace mirror to work on Jenkins
RUN sed -i 's|#baseurl=http://mirror.centos.org/centos|baseurl=http://mirror.rackspace.com/CentOS|' /etc/yum.repos.d/*.repo
RUN sed -i 's|mirrorlist.*||' /etc/yum.repos.d/*.repo
RUN sed -i 's|plugins=1|plugins=0|' /etc/yum.conf

RUN yum clean all
RUN yum update -y
RUN yum install -y wget unzip java-1.8.0-openjdk-headless
ENV JAVA_HOME /usr/lib/jvm/jre

WORKDIR /service

# 15-python.txt
RUN yum install -y epel-release
RUN yum install -y python-{devel,virtualenv,setuptools,pip}
RUN yum install -y openssl-devel mysql-devel gcc libffi-devel
RUN yum install -y redis
RUN systemctl enable redis
# 20-mysq.txt

# Set up mysql
RUN wget http://repo.mysql.com/mysql-community-release-el7-5.noarch.rpm
RUN rpm -ivh mysql-community-release-el7-5.noarch.rpm
RUN rm -f mysql-community-release-el7-5.noarch.rpm
RUN yum -y update
RUN yum -y install -y mysql-server
RUN mysql_install_db --user=mysql --datadir=/var/lib/mysql
COPY init-mysql.sh .

# 50-microservice.txt - AUTOGENERATED, DO NOT MODIFY MANUALLY

# Set up microservice
RUN wget -O nfvo-lcm-1.0.0-RC0.zip https://nexus.open-o.org/content/repositories/autorelease-1048/org/openo/nfvo/nfvo-lcm/1.0.0-RC0/nfvo-lcm-1.0.0-RC0.zip
RUN unzip -o -B nfvo-lcm-1.0.0-RC0.zip
RUN rm -f nfvo-lcm-1.0.0-RC0.zip
EXPOSE 8403
RUN echo Open-O 1.0.0-RC0 autorelease-1048 > VERSION


# 51-permissions.txt
RUN find -type d -exec chmod o-w {} \;
RUN chmod +x nfvo/lcm/*.sh
# need MySQL initDB script
RUN wget -O common-tosca-inventory-1.0.0-RC0-linux64.tar.gz https://nexus.open-o.org/content/repositories/autorelease-1020/org/openo/common-tosca/inventory/standalone/1.0.0-RC0/standalone-1.0.0-RC0-linux64.tar.gz
RUN tar -xf common-tosca-inventory-1.0.0-RC0-linux64.tar.gz initDB.sh dbscripts
RUN rm -f common-tosca-inventory-1.0.0-RC0-linux64.tar.gz
# 90-entrypoint.txt

COPY instance-config.sh .
COPY instance-init.sh .
COPY instance-run.sh .
COPY instance-workaround.sh .
COPY docker-entrypoint.sh .
ENTRYPOINT /service/docker-entrypoint.sh
