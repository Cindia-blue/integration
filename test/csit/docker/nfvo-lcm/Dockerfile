# 10-basebuild.txt

FROM centos:7

RUN sed -i 's|#baseurl=http://mirror.centos.org/centos|baseurl=http://mirrors.ocf.berkeley.edu/centos|' /etc/yum.repos.d/*.repo
RUN yum update -y

RUN yum install -y wget unzip socat java-1.8.0-openjdk-headless
RUN sed -i 's|#networkaddress.cache.ttl=-1|networkaddress.cache.ttl=10|' /usr/lib/jvm/jre/lib/security/java.security
ENV JAVA_HOME /usr/lib/jvm/jre

WORKDIR /service

# 15-python.txt
RUN yum -y install epel-release && yum -y install python-{devel,virtualenv,setuptools,pip} openssl-devel mysql-devel gcc libffi-devel redis
# 20-mysq.txt

# Set up mysql
RUN wget -q http://repo.mysql.com/mysql-community-release-el7-5.noarch.rpm && rpm -ivh mysql-community-release-el7-5.noarch.rpm && rm -f mysql-community-release-el7-5.noarch.rpm
RUN yum -y update
RUN yum -y install -y mysql-server
RUN mysql_install_db --user=mysql --datadir=/var/lib/mysql
COPY init-mysql.sh .

# 50-microservice.txt - AUTOGENERATED, DO NOT MODIFY MANUALLY

# Set up microservice
RUN wget -q -O nfvo-lcm-1.1.0-SNAPSHOT.zip "https://nexus.open-o.org/service/local/repositories/snapshots/content/org/openo/nfvo/nfvo-lcm/1.1.0-SNAPSHOT/nfvo-lcm-1.1.0-20170120.063902-55.zip" && unzip -q -o -B nfvo-lcm-1.1.0-SNAPSHOT.zip && rm -f nfvo-lcm-1.1.0-SNAPSHOT.zip
EXPOSE 8403
RUN echo Open-O nfvo-lcm 1.1.0-SNAPSHOT "https://nexus.open-o.org/service/local/repositories/snapshots/content/org/openo/nfvo/nfvo-lcm/1.1.0-SNAPSHOT/nfvo-lcm-1.1.0-20170120.063902-55.zip" > OPENO_VERSION


# 51-permissions.txt
RUN find -type d -exec chmod o-w {} \;
RUN chmod +x nfvo/lcm/*.sh
# 80-workaround.txt
# need MySQL initDB script
RUN wget -q -O common-tosca-inventory-1.1.0-SNAPSHOT-linux64.tar.gz 'https://nexus.open-o.org/service/local/artifact/maven/redirect?r=snapshots&g=org.openo.common-tosca.inventory&a=standalone&e=tar.gz&c=linux64&v=LATEST' && tar -xf common-tosca-inventory-1.1.0-SNAPSHOT-linux64.tar.gz bin/initDB.sh dbscripts && rm -f common-tosca-inventory-1.1.0-SNAPSHOT-linux64.tar.gz

# 90-entrypoint.txt

RUN yum clean all

COPY instance-config.sh .
COPY instance-init.sh .
COPY instance-run.sh .
COPY instance-workaround.sh .
COPY docker-entrypoint.sh .
